<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<Context>

<Resource name="jdbc/swn" auth="Container" type="javax.sql.DataSource"
	maxActive="50" maxIdle="30" maxWait="10000" username="${db.username}"
	password="${db.password}" driverClassName="com.mysql.jdbc.Driver"
	url="jdbc:mysql://localhost:3306/${db.name}" />

</Context>